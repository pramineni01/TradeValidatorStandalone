
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://tradeui.shell.com/trade-validation-schema.json",
    "title": "Trades Validation Engine Schema",
    "description": "Trade validation engine schema",
    "type": "array",
    "items": {"$ref": "#/definitions/trade"},
    "definitions": {
        "trade": {
            "type": "object",
            "title": "Trade",
            "properties": {
                "start_date": {
                    "type": "string",
                    "format": "date-time"
                },
                "end_date": {
                    "type": "string",
                    "format": "date-time"
                },
                "portfolio": {
                    "type": "string"
                },
                "asset": {
                    "type": "string"
                },
                "market": {
                    "type": "string",
                    "enum": [ "mkt_1","mkt_2", "mkt_3","mkt_4", "mkt_5"]
                },
                "direction": {
                    "type": "string",
                    "enum": ["BUY", "SELL"]
                },
                "quantity": {
                    "type": "number",
                    "exclusiveMinimum": 0,
                    "check_quantity": true
                }
            },
            "required": ["quantity"],
            "additionalProperties": true
        }
    }
}